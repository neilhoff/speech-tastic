<p id="notice"><%= notice %></p>

<div id="product-show">
  <div class="product-group">
    <div class="product">
      <div class="product-info">
        <%= image_tag @product.image_url, class: "center-block"%>
        <div class="title"><%= @product.title %></div>
        <p class="desc"><%= @product.description %></p>
      </div>

      <a href="<%= @product.link %>" class="btn btn-product">Learn More</a>
      <ul class="admin-store-edits">
        <li><%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-default' %></li>
        <li><%= link_to 'Destroy', @product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></li>
      </ul>
    </div>
  </div>
</div>
