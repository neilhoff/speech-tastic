
<div class="post">
  <h1 class="title"><%= @post.title %></h1>
  <div class="date"><%= @post.created_at.strftime('%B %e at %l:%M %p') %></div>

  <%= render partial: 'shared/social_buttons', locals: { title: @post.title } %>

  <hr>
  <div class="post-content">
    <%= @post.content.html_safe %>
  </div>

  <% if can? :update, @post %>
    <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-default btn-edit" %>
  <% end %>

</div>


